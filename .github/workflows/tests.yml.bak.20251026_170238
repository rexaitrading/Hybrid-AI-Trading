name: Hybrid AI Quant Pro CI

on:
  push:
    branches: [ main, dev ]
  pull_request:
    branches: [ main, dev ]

jobs:
  tests:
    runs-on: ubuntu-latest
    strategy:
      matrix:
        python-version: [ "3.12" ]

    steps:
      # ------------------------------------------------------------------
      # Checkout repo
      # ------------------------------------------------------------------
      - name: Checkout repository
        uses: actions/checkout@v4

      # ------------------------------------------------------------------
      # Setup Python
      # ------------------------------------------------------------------
      - name: Set up Python ${{ matrix.python-version }}
        uses: actions/setup-python@v5
      - name: Install test deps (pytest)
        run: |
          python -m pip install --upgrade pip
          python -m pip install pytest
      - name: Install package (-e .)
        run: |
          python -m pip install --upgrade pip
          python -m pip install -e .
      - name: Set PYTHONPATH for src layout
        run: echo "PYTHONPATH=$GITHUB_WORKSPACE/src" >> $GITHUB_ENV
        with:
          python-version: ${{ matrix.python-version }}

      # ------------------------------------------------------------------
      # Install dependencies
      # ------------------------------------------------------------------
      - name: Install dependencies
        run: |
          python -m pip install --upgrade pip
          pip install -r requirements.txt
          pip install pytest pytest-cov

      # ------------------------------------------------------------------
      # Local developer coverage (trade_engine only)
      # ------------------------------------------------------------------
      - name: Run TradeEngine Dev Tests (pytest.ini)
        run: |
          pwd
          ls -la
          cd "$GITHUB_WORKSPACE"
          python -m pip install -U pip pytest
          python -m pip install -e "$GITHUB_WORKSPACE"
          export PYTHONPATH="$GITHUB_WORKSPACE/src"
          python - <<PY
          import sys, pkgutil
          print("exe:", sys.executable)
          print("pyver:", sys.version.split()[0])
          print("importable:", bool(pkgutil.find_loader("hybrid_ai_trading")) )
          import hybrid_ai_trading; print("module:", getattr(hybrid_ai_trading,"__file__",None))
          PY
          python -m pytest -c "$GITHUB_WORKSPACE/pytest.ini"
      - name: Run Full Repo Tests (pytest_strict.ini)
        run: |
          pytest -c pytest_strict.ini
